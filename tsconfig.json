{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
        "skipLibCheck": true,
        "ignoreDeprecations": "5.0",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["esnext", "dom"],
        "types": ["@dcloudio/types", "node"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "types/**/*.ts",
        "types/**/*.d.ts"
    ]
}
